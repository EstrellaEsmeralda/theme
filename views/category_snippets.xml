        </template>
    <!-- Fashion category snippet -->
    <template id="fashion_category_snippet_1" name="Category Snippet 2">
        <section class="fashion_category_snippet_1"  data-disp='category_snippet'>
            <div class='container-fluid'>
                <div class="row s_nb_column_fixed">
                    <div class='col-md-12'>
                        <h2 class="section-title">Categories</h2>
                    </div>
                </div>
                <div class='row s_nb_column_fixed'>
                    <div class='col-md-12 sct_cat_main'>
                        <div class='cat_left_side'>
                            <div class='cat_top_div'>
                                <div class='cat_top_content'>
                                    <h3 class='sct_cat_title'>Shop Men</h3>
                                    <p class='sct_simple_text'>Pre-fall Collection</p>
                                    <div class="sct_btn_div">
                                        <a href="/shop" class="btn">SHOP NOW<span class="ti-arrow-right"></span></a>
                                    </div>
                                </div>
                                <div class='left_img_border'>
                                    <img src="/web/image/theme_scita.sct_category_snippet_2_left" class="img img-fluid"/>
                                </div>
                                <h3 class='sct_vertical_text'>New Collection</h3>
                            </div>
                            <div class="cat_bottom_div">
                                <div class='sct_cat_box'>
                                    <h3 class='sct_box_title'>Shop kids</h3>
                                    <p class='sct_box_simple'>New Collection</p>
                                    <div class="sct_btn_div">
                                        <a href="/shop" class="btn">SHOP NOW<span class="ti-arrow-right"></span></a>
                                    </div>
                                </div>
                                <div class='sct_cat_box'>
                                    <h3 class='sct_box_title'>Extravaganza</h3>
                                    <p class='sct_box_simple'>New Collection</p>
                                    <div class="sct_btn_div">
                                        <a href="/shop" class="btn">SHOP NOW<span class="ti-arrow-right"></span></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class='cat_right_side'>
                            <div class='sct_back_img'>
                                <div class='sct_middle_img'>
                                    <img src="/web/image/theme_scita.sct_category_snippet_2_right" class="img img-fluid"/>
                                </div>
                                <div class='cat_top_content'>
                                    <h3 class='sct_cat_title'>Shop Women</h3>
                                    <p class='sct_simple_text'>Pre-fall Collection</p>
                                    <div class="sct_btn_div">
                                        <a href="/shop" class="btn">SHOP NOW<span class="ti-arrow-right"></span></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>
    <!--  Retail category banner snippet-->
    <template id="retial_category_snippet_1" name="Category Snippet 1">
        <section class="retial_category_snippet_1" data-disp='category_snippet'>
            <div class='container'>
                <div class="row s_nb_column_fixed">
                    <h2 class="section-title">Categories</h2>
                    <div class='col-md-7'>
                        <div class="row">
                            <div class='col-md-6 cat-winter'>
                                <div class="cat_icon">
                                    <img src="/web/image/theme_scita.sct_category_snippet_1_kids" class="img img-fluid mx-auto" alt="Kids collection item"/>
                                </div>
                                <div class="cat_info">
                                    <div class="cat-desp">
                                        <p>Kids</p>
                                        <h3 class="cat-title">Toys Wishlist</h3>
                                    </div>
                                </div>
                            </div>
                            <div class='col-md-6 cat-fashion'>
                                <div class="cat_icon">
                                    <img src="/web/image/theme_scita.sct_category_snippet_1_furniture" class="img img-fluid mx-auto" alt="furniture Collection icon"/>
                                </div>
                                <div class="cat_info">
                                    <div class="cat-desp">
                                        <p>Best</p>
                                        <h3 class="cat-title">Furniture</h3>
                                    </div>
                                </div>
                            </div>
                            <div class='col-md-6 cat-men'>
                                <div class="cat_icon">
                                    <img src="/web/image/theme_scita.sct_category_snippet_1_home_col" class="img img-fluid mx-auto" alt="Home appliances icon"/>
                                </div>
                                <div class="cat_info">
                                    <div class="cat-desp">
                                        <p>Home</p>
                                        <h3 class="cat-title">Appliances</h3>
                                    </div>
                                </div>
                            </div>
                            <div class='col-md-6 cat-women'>
                                <div class="cat_icon">
                                    <img src="/web/image/theme_scita.sct_category_snippet_1_watch" class="img img-fluid mx-auto" alt="Watch collection icon"/>
                                </div>
                                <div class="cat_info">
                                    <div class="cat-desp">
                                        <p>Premium Picks</p>
                                        <h3 class="cat-title">Watches</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class='col-md-5'>
                        <div class="cate_img">
                            <img src="/web/image/theme_scita.sct_category_snippet_1_cat_main" class="img img-fluid" alt="Main product"/>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>

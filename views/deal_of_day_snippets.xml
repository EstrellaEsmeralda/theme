<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!--  Retail Offer Snippet -->
    <template id="retial_deal_of_day_banner_snippet_1" name="Deal of the Day Snippet 1">
        <section class="retial_deal_of_day_banner_snippet_1" data-disp="deal_days">
            <div class='container'>
                <div class="row s_nb_column_fixed">
                    <div class='col-md-12 sct_promo_banner'>
                        <section>
                            <div class="sct-left-side">
                                <img src="/web/image/theme_scita.sct_deal_snippet_1_image_1" class="img img-fluid mx-auto" alt="For Men Offer" loading=""/>
                                <div class='deal_content'>
                                    <div class='sct_title'>
                                        <h2 class='title_banner'>Deals of the day</h2>
                                    </div>
                                    <div class='sct_sub_title'>
                                        <p class='sub_title_banner'>Hurry Up! Offer end in</p>
                                    </div>
                                    <div class="timer_counter_div"></div>
                                    <div class='sct_deal_btn'>
                                        <a href="/contactus" class="btn">All Products <span class="ti-arrow-right"></span></a>
                                    </div>
                                </div>
                            </div>
                        </section>
                        <div class="sct_right_img">
                            <div class="offer-img">
                                <a href="/shop">
                                    <img src="/web/image/theme_scita.sct_deal_snippet_1_image_2" class="img img-fluid mx-auto" alt="For Men Offer"/>
                                </a>
                                <a href="/shop">
                                    <img src="/web/image/theme_scita.sct_deal_snippet_1_image_3" class="img img-fluid mx-auto" alt="For Offer"/>
                                </a>
                                <a href="/shop">
                                    <img src="/web/image/theme_scita.sct_deal_snippet_1_image_4" class="img img-fluid mx-auto" alt="For Women Offer"/>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>
    <!-- Fashion deal of the day -->
